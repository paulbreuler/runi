#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Check if only documentation files have changed
DOCS_ONLY=$(bash scripts/check-docs-only.sh)

if [ "$DOCS_ONLY" = "true" ]; then
  echo "ğŸ“š Only documentation files changed, skipping tests..."
  just ci-no-test
else
  echo "ğŸ” Code changes detected, running full CI pipeline..."
  just ci
fi
