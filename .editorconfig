# EditorConfig - https://editorconfig.org
# Ensures consistent coding styles across editors and IDEs
# Most editors support this natively or via plugin

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# TypeScript / JavaScript / React
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# Rust files (match rustfmt.toml)
[*.rs]
indent_size = 4
max_line_length = 100

# TOML configuration files
[*.toml]
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS / Tailwind
[*.css]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# justfile uses spaces
[justfile]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2
