{
  "name": "runi",
  "version": "0.7.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "tsc --noEmit",
    "check:watch": "tsc --noEmit --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test-storybook": "vitest --config vitest.config.storybook.ts",
    "test-storybook:visual": "playwright test --config playwright.visual.config.ts",
    "test-storybook:visual:update": "playwright test --config playwright.visual.config.ts --update-snapshots",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint . && stylelint \"src/**/*.css\"",
    "lint:fix": "eslint . --fix && stylelint \"src/**/*.css\" --fix",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "tauri": "tauri",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "eslint",
      "prettier --write"
    ],
    "*.{js,jsx,json,html}": [
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "bash -c 'if [[ \"$(basename \"$1\")\" != \"CHANGELOG.md\" ]]; then markdownlint --fix \"$1\"; fi' --",
      "prettier --write"
    ],
    "src-tauri/**/*.rs": [
      "rustfmt"
    ]
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@codemirror/autocomplete": "6.20.0",
