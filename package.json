    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "react-syntax-highlighter": "^16.1.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@internationalized/date": "^3.10.1",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-a11y": "^8.6.15",
    "@storybook/addon-essentials": "^8.6.15",
