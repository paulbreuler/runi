{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "color-no-hex": true,
    "color-named": "never",
    "function-disallowed-list": ["rgb", "rgba", "hsl", "hsla"],
    "declaration-property-value-disallowed-list": {
      "color": ["/^#/", "/^rgb/", "/^hsl/"],
      "background-color": ["/^#/", "/^rgb/", "/^hsl/"],
      "border-color": ["/^#/", "/^rgb/", "/^hsl/"],
      "outline-color": ["/^#/", "/^rgb/", "/^hsl/"],
      "fill": ["/^#/", "/^rgb/", "/^hsl/"],
      "stroke": ["/^#/", "/^rgb/", "/^hsl/"]
    },
    "custom-property-pattern": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "layer", "theme", "config"]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme", "light-dark", "oklch"]
      }
    ],
    "import-notation": null,
    "no-descending-specificity": null,
    "comment-empty-line-before": null,
    "rule-empty-line-before": null,
    "no-duplicate-selectors": null,
    "property-no-vendor-prefix": null,
    "lightness-notation": null,
    "hue-degree-notation": null
  },
  "ignoreFiles": ["node_modules/**", "dist/**", "src-tauri/**", "src/styles/color-scales.css"],
  "overrides": [
    {
      "files": ["src/styles/theme-tokens.css", "src/app.css"],
      "rules": {
        "color-no-hex": null,
        "function-disallowed-list": null
      }
    }
  ]
}
